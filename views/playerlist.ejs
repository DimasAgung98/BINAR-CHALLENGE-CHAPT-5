                        <td>JackLockley@gmail</td>
                        <td>22/04/2022</td>
                        <td>Male</td>
                        <td>34</td>
                        <td>Indonesia</td>
                        <td><a href="" class="btn btn-primary">Details</a></td>
                        <td><a href="" class="btn btn-success">Update</a></td>
                        <td><a href="" class="btn btn-danger">Delete</a></td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>Steven Grant</td>
                        <td>JackLockley@gmail</td>
                        <td>22/04/2022</td>
                        <td>Male</td>
                        <td>34</td>
                        <td>Indonesia</td>
                        <td><a href="" class="btn btn-primary">Details</a></td>
                        <td><a href="" class="btn btn-success">Update</a></td>
                        <td><a href="" class="btn btn-danger">Delete</a></td>
                    </tr>
                    <tr>
                        <th scope="row">3</th>
                        <td>Marc Specter</td>
                        <td>JackLockley@gmail</td>
                        <td>22/04/2022</td>
                        <td>Male</td>
                        <td>34</td>
                        <td>Indonesia</td>
                        <td><a href="" class="btn btn-primary">Details</a></td>
                        <td><a href="" class="btn btn-success">Update</a></td>
                        <td><a href="" class="btn btn-danger">Delete</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <!-- MODAL SECTION -->
    <div class="bg-modal">
        <div class="modal-content">
            <a class="close" href="#"><i class="fa-solid fa-circle-xmark"></i></a>
            <h2>CREATE NEW USER</h2>
            <form method="POST">
                <div class="row centerForm">
                    <div class=" col-6 mb-3">
                        <label class="label">Username</label>
                        <input type="text" name="username">
                    </div>
                    <div class="col-6 mb-3"> 
                        <label class="label">Password</label>
                        <input type="text" name="password">
                    </div>
                </div>
                <div class="row">
                    <div class=" col-6 mb-3">
                        <label class="label">Email</label>
                        <input type="email" name="email">
                    </div>
                    <div class="col-6 mb-3"> 
                        <label class="label">Birthday</label>
                        <input type="text" name="birthday">
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script src="../public/static/src/assets/vendor/jquery/jquery.min.js"></script>
    <script src="../public/static/src/assets/js/dashboard.js"></script>
</body>

</html>