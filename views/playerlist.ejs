<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Boostrap 5.1.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- Vendor Icon -->
    <link rel="stylesheet" href="/public/static/src/assets/vendor/fontawesome-free-6.1.1-web/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/public/static/src/assets/styles/dashboard.css">
    <!-- Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@400;500;700&display=swap" rel="stylesheet">
    <!-- Title -->
    <link rel="icon" type="image/png" href="/public/static/src/assets/images/Dimas.png">
    <title>Dashboard Page</title>
</head>

<body>
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand">ADMIN PAGE | TRADITIONAL GAME</a>
        </div>
    </nav>
    <div class="container">
        <div class="sidebar">
            <div class="header">
                <div class="list-item">
                    <a href="/dashboard">
                        <i class="fa-solid fa-chart-line me-2"></i>
                        <span class="description-header">DASHBOARD PAGE</span>
                    </a>
                </div>
                <div class="logo">
                    <img src="/public/static/src/assets/images/logoadmin.png" alt="">
                </div>
            </div>
            <div class="main">
                <div class="list-item">
                    <a href="/dashboard">
                        <i class="fa-solid fa-gauge-high me-2"></i>
                        <span class="description">DASHBOARD</span>
                    </a>
                </div>
                <div class="list-item">
                    <a href="/dashboard/player-list">
                        <i class="fa-solid fa-users me-2"></i>
                        <span class="description">PLAYER LIST</span>
                    </a>
                </div>
                <div class="list-item">
                    <a href="/dashboard/player-history">
                        <i class="fa-solid fa-users-between-lines me-2"></i>
                        <span class="description">PLAYER HISTORY</span>
                    </a>
                </div>
                <div class="list-item">
                    <a href="/dashboard/leaderboard">
                        <i class="fa-solid fa-ranking-star me-2"></i>
                        <span class="description">LEADERBOARD</span>
                    </a>
                </div>
                <div class="list-item">
                    <a href="/game">
                        <i class="fa-solid fa-gamepad me-2"></i>
                        <span class="description">GO TO GAME</span>
                    </a>
                </div>
                <div class="list-item">
                    <a href="/">
                        <i class="fa-solid fa-arrow-right-from-bracket me-2"></i>
                        <span class="description">EXIT</span>
                    </a>
                </div>
            </div>
        </div>
        <!-- MAIN CONTENT -->
        <div class="main-content">
            <div id="menu-button">
                <input type="checkbox" id="menu-checkbox">
                <label for="menu-checkbox" id="menu-label">
                    <div id="hamburger"></div>
                </label>
            </div>
            <!-- PLAYER LIST -->
            <div class="ps-5 pt-5">
                <div class="row">
                    <div class="col-sm">
                        <h2><i class="fa-solid fa-users me-2"></i>PLAYER LIST</h2>
                    </div>
                    <div class="col-sm">
                        <form class="d-flex">
                            <input class="form-control me-2" type="search" placeholder="Search Player"
                                aria-label="Search">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </form>
                    </div>
                </div>
                <hr>
            </div>
            <!-- ADD NEW USER/PLAYER -->
            <a href="#" id="createbutton" class="btn btn-createUser mx-5 my-2"><i class="fa-solid fa-folder-plus me-3"></i>CREATE NEW
                USER</a>
            <!-- TABLE PLAYER -->
            <table class="table mx-5">
                <thead class="table-color text-white">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Username</th>
                        <th scope="col">Email</th>
                        <th scope="col">Birth Date</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Age</th>
                        <th scope="col">Country</th>
                        <th colspan="3" scope="col">Action</th>
                    </tr>
                </thead>
                <!-- TABLE INFORMATION -->
                <tbody>
                    <tr>
                        <th scope="row">1</th>
